<nav class="navbar navbar-default hidden-xs" role="navigation">

<!-- Brand and toggle get grouped for better mobile display -->

<div class="navbar-header">

    <a class="navbar-brand" href="#">Brand</a>

</div><!--navbar-header-->

<ul class="nav navbar-nav">

    @foreach (var item in ViewData["categories"] as IEnumerable<Gameblog.Models.Category>)
    {
        <li class="dropdown">
            <a role="button" data-toggle="dropdown" href="#">@Html.DisplayFor(modelItem => item.category_name)</a>
            <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                @{var list = (item.SubCategories);
                //getting list all the subCategouries related to Categoury
                foreach (var f in list)
                    { 
                    <li class="dropdown">  @f.sub_name  </li>
                    }
                }
            </ul>
        </li>
    }
</ul>
</nav><!--second nav-->
